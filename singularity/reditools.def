Bootstrap: docker
From: ubuntu:20.04

%environment
    export PATH="/opt/miniconda/bin:$PATH" 
    source /opt/etc/bashrc

%runscript
    exec "$@"

%post
    ###### apt requisites
    apt update
    apt -y install git wget gcc libz-dev
    ###### building env
    # miniconda2: get miniconda2 latest vers
    wget https://repo.continuum.io/miniconda/Miniconda2-py27_4.8.3-Linux-x86_64.sh -O miniconda.sh
    # install conda
    bash miniconda.sh -b -p /opt/miniconda
    export PATH="/opt/miniconda/bin:$PATH"
    # init bash and env
    mkdir -p /opt/etc
    conda init bash
    cp ~/.bashrc /opt/etc/bashrc
    # install reqs
    conda install -c bioconda -c conda-forge python=2.7 "pysam<0.8"
    ###### reditools source and install
    git clone https://github.com/BioinfoUNIBA/REDItools.git
    cd REDItools && python setup.py install
